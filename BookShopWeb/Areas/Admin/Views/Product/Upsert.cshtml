@model ProductVM

<div class="shadow border-1 mb-5">
    <div class="card-header bg-secondary ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center ">
                <h2 class="text-white py-2"> @(Model.Product.Id != 0 ? "Update" : "Create") Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Product.Id" hidden />
            <input asp-for="Product.ImageUrl" hidden />
            <div class="col-10">
                <div class="p-3">
                    <div class="form-floating py-3 col-12 fw-bold">
                        <label asp-for="Product.Title" class="ms-2"></label>
                        <input asp-for="Product.Title" class="form-control border-0 shadow ms-2" />
                        <span asp-validation-for="Product.Title" class="text-danger ms-2"></span>
                    </div>
                    <div class="py-3 col-12 fw-bold">
                        <label asp-for="Product.Description" class="ms-2"></label>
                        <textarea asp-for="Product.Description" class="form-control border-0 shadow ms-2"></textarea>
                    </div>
                    <div class="form-floating py-3 col-12 fw-bold">
                        <label asp-for="Product.ISBN" class="ms-2"></label>
                        <input asp-for="Product.ISBN" class="form-control border-0 shadow ms-2" />
                        <span asp-validation-for="Product.ISBN" class="text-danger ms-2"></span>
                    </div>
                    <div class="form-floating py-3 col-12 fw-bold">
                        <label asp-for="Product.Author" class="ms-2"></label>
                        <input asp-for="Product.Author" class="form-control border-0 shadow ms-2" />
                        <span asp-validation-for="Product.Author" class="text-danger ms-2"></span>
                    </div>
                    <div class="form-floating py-3 col-12 fw-bold">
                        <label asp-for="Product.Price" class="ms-2"></label>
                        <input asp-for="Product.Price" class="form-control border-0 shadow ms-2" />
                        <span asp-validation-for="Product.Price" class="text-danger ms-2"></span>
                    </div>
                    <div class="form-floating py-3 col-12 fw-bold">
                        <label asp-for="Product.Price20" class="ms-2"></label>
                        <input asp-for="Product.Price20" class="form-control border-0 shadow ms-2" />
                        <span asp-validation-for="Product.Price20" class="text-danger ms-2"></span>
                    </div>
                    <div class="form-floating py-3 col-12 fw-bold">
                        <label asp-for="Product.Price50" class="ms-2"></label>
                        <input asp-for="Product.Price50" class="form-control border-0 shadow ms-2" />
                        <span asp-validation-for="Product.Price50" class="text-danger ms-2"></span>
                    </div>

                    <label asp-for="Product.Category" class="ms-2 fw-bold"></label>
                    <select asp-for="Product.CategoryId" asp-items="@Model.categoryList" class="form-select border-0 shadow">
                        <option disabled selected>--Select Category--</option>
                    </select>

                    <div class="form-floating py-3 col-12 fw-bold">
                        <label asp-for="Product.ImageUrl" class="ms-2"></label>
                        <input type="file" name="file" class="form-control border-0 shadow ms-2" />
                    </div>

                    <div class="row pt-2">

                        <div class="col-6 col-md-3">
                            @if (Model.Product.Id != 0)
                            {
                                <button type="submit" class="btn btn-primary form-control">Update</button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-primary form-control">Create</button>
                            }
                        </div>

                        <div class="col-6 col-md-3">
                            <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border-dark-subtle form-control">
                                Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-2">
                <img src="~/@Model.Product.ImageUrl" width="100%"
                     style="border-radius:5px;border: 2px solid #eeeeee" />
            </div>
            
        </form>
    </div>
</div>

@section Scripts{
    <script>
        tinymce.init({
            selector: 'textarea'
        });
    </script>
}
