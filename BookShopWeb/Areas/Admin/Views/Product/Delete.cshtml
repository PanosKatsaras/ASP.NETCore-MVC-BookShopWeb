@model Product

<div class="shadow border-1 mb-5">
    <div class="card-header bg-secondary ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-secondary py-2">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="Id" hidden />
            <input asp-for="ImageUrl" hidden />
            <div class="p-3 mt-4">
                <div class="form-floating py-3 col-12 fw-bold">
                    <label asp-for="Title" class="ms-2"></label>
                    <input asp-for="Title" disabled class="form-control border-0 shadow ms-2" style="background-color:#eeeeee;" />
                </div>
                <div class="form-floating py-3 col-12 fw-bold">
                    <label asp-for="Description" class="ms-2"></label>
                    <textarea asp-for="Description" disabled class="form-control border-0 shadow ms-2" style="background-color:#eeeeee;"></textarea>
                </div>
                <div class="form-floating py-3 col-12 fw-bold">
                    <label asp-for="ISBN" class="ms-2"></label>
                    <input asp-for="ISBN" disabled class="form-control border-0 shadow ms-2" style="background-color:#eeeeee;" />
                </div>
                <div class="form-floating py-3 col-12 fw-bold">
                    <label asp-for="Author" class="ms-2"></label>
                    <input asp-for="Author" disabled class="form-control border-0 shadow ms-2" style="background-color:#eeeeee;" />
                </div>
                <div class="form-floating py-3 col-12 fw-bold">
                    <label asp-for="Price" class="ms-2"></label>
                    <input asp-for="Price" disabled class="form-control border-0 shadow ms-2" style="background-color:#eeeeee;" />
                </div>
                <div class="form-floating py-3 col-12 fw-bold">
                    <label asp-for="Price20" class="ms-2"></label>
                    <input asp-for="Price20" disabled class="form-control border-0 shadow ms-2" style="background-color:#eeeeee;" />
                </div>
                <div class="form-floating py-3 col-12 fw-bold">
                    <label asp-for="Price50" class="ms-2"></label>
                    <input asp-for="Price50" disabled class="form-control border-0 shadow ms-2" style="background-color:#eeeeee;" />
                </div>
                <div class="form-floating py-3 col-12 fw-bold">
                    <label asp-for="Category" class="ms-2"></label>
                    <input asp-for="CategoryId" disabled class="form-control border-0 shadow ms-2" style="background-color:#eeeeee;" />
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border-dark-subtle form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script>
        tinymce.init({
            selector: 'textarea'
        });
    </script>
   
}

